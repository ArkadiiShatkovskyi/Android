<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_header_selector"
        tools:context=".OfflineModeActivity">

    <Button
            android:text="@string/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/strTime"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.024"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dateEditText"
            android:onClick="startTimePicker"
            android:background="@drawable/both_corners"
            app:layout_constraintHorizontal_bias="0.049"/>
    <RadioGroup
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toTopOf="parent"
            android:focusable="true"
            android:addStatesFromChildren="false"
            android:animateLayoutChanges="false"
            android:id="@+id/radio_group"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
        <RadioButton
                android:text="@string/sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton4"
                android:layout_weight="1"
                android:button="@android:color/transparent"
                android:background="@drawable/left_corner"
                android:textAlignment="center"
                android:minHeight="50dp"/>
        <RadioButton
                android:text="@string/offline_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3"
                android:layout_weight="1"
                android:button="@android:color/transparent"
                android:background="@drawable/right_corner"
                android:textAlignment="center"
                android:minHeight="50dp"
                android:checked="true"/>
    </RadioGroup>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/dateEditText"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/radio_group"/>
    <Button
            android:text="@string/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/addBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.167"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/dateEditText"
            android:background="@drawable/both_corners"
            app:layout_constraintHorizontal_bias="0.497" android:onClick="addHours"/>
    <Button
            android:text="@string/end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/endTime"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.024"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dateEditText"
            android:onClick="endTimePicker"
            android:background="@drawable/both_corners" app:layout_constraintHorizontal_bias="1.0"/>

</android.support.constraint.ConstraintLayout>