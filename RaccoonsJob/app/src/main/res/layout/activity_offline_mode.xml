<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_header_selector"
        tools:context=".OfflineModeActivity">

    <Button
            android:text="@string/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/addBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.108"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/dateEditText"
            android:background="@drawable/both_corners"
            app:layout_constraintHorizontal_bias="0.497" android:onClick="addHours"/>
    <Button
            android:text="@string/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/strTime"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.014"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dateEditText"
            android:onClick="startTimePicker"
            android:background="@drawable/both_corners"
            app:layout_constraintHorizontal_bias="0.016"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/dateEditText"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent" android:hint="Date"/>
    <Button
            android:text="@string/end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/endTime"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.014"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dateEditText"
            android:onClick="endTimePicker"
            android:background="@drawable/both_corners" app:layout_constraintHorizontal_bias="0.967"/>

</android.support.constraint.ConstraintLayout>