<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arek.lab4_part1.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.arek.lab4_part1.Fragment1"
        android:id="@+id/fragment"
        android:layout_weight="0.74" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="222dp"
        android:layout_weight="0.29"
        android:id="@+id/kontener">

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="69dp"
            android:name="com.example.arek.lab4_part1.Fragment13"
            android:id="@+id/fragment4"
            android:layout_gravity="center_horizontal|bottom" />

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:name="com.example.arek.lab4_part1.Fragment12"
            android:id="@+id/fragment3"
            android:layout_gravity="right|center_vertical" />

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:name="com.example.arek.lab4_part1.Fragment11"
            android:id="@+id/fragment2"
            android:layout_gravity="left|center_vertical" />
    </FrameLayout>

</LinearLayout>
